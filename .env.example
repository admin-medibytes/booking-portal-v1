# =====================================================
# Medibytes Booking Portal Environment Configuration
# =====================================================
# Copy this file to .env.local for development
# All variables are validated using @t3-oss/env-nextjs

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=3000
HOST=localhost
APP_NAME="Medibytes Booking Portal"
APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =====================================================
# DATABASE CONFIGURATION (PostgreSQL 15.4)
# =====================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/medibytes_booking
DB_SSL=false
DB_POOL_SIZE=10

# =====================================================
# REDIS CONFIGURATION (Redis 7.2)
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# =====================================================
# AUTHENTICATION (Better Auth)
# =====================================================
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters
BETTER_AUTH_URL=http://localhost:3000
AUTH_TRUSTED_ORIGINS=http://localhost:3000
SESSION_SECRET=your-session-secret-here-minimum-32-characters
SESSION_TIMEOUT=86400

# =====================================================
# AWS CONFIGURATION
# =====================================================
# AWS General
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS S3 (Document Storage)
AWS_S3_BUCKET_NAME=medibytes-booking-documents
AWS_S3_REGION=ap-southeast-2
S3_UPLOAD_MAX_SIZE=500MB
S3_PRESIGNED_URL_EXPIRY=300

# AWS SES (Email Service)
AWS_SES_REGION=ap-southeast-2
SES_FROM_EMAIL=noreply@medibytes.com.au
SES_FROM_NAME="Medibytes Booking Portal"

# AWS CloudWatch (Logging)
CLOUDWATCH_LOG_GROUP=/aws/ecs/medibytes-booking
CLOUDWATCH_LOG_STREAM=app

# =====================================================
# ACUITY SCHEDULING INTEGRATION
# =====================================================
ACUITY_USER_ID=your-acuity-user-id
ACUITY_API_KEY=your-acuity-api-key
ACUITY_BASE_URL=https://acuityscheduling.com/api/v1
ACUITY_WEBHOOK_SECRET=your-webhook-secret
ACUITY_RATE_LIMIT_PER_SECOND=10
ACUITY_RATE_LIMIT_PER_HOUR=5000

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
ENCRYPTION_KEY=your-encryption-key-here-32-characters
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CACHING CONFIGURATION
# =====================================================
CACHE_TTL_SHORT=300
CACHE_TTL_LONG=3600

# =====================================================
# LOGGING AND MONITORING
# =====================================================
LOG_LEVEL=info
STRUCTURED_LOGGING=true
AUDIT_LOG_ENABLED=true
MONITORING_ENABLED=false
ERROR_REPORTING_DSN=

# =====================================================
# FEATURE FLAGS
# =====================================================
FEATURE_ADMIN_IMPERSONATION=false
FEATURE_PHONE_VERIFICATION=false
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_DOCUMENT_VIRUS_SCAN=false

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
MAX_FILE_SIZE=524288000